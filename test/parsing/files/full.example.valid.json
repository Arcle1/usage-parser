{
   "$schema": "https://repometric.github.io/linterhub/schema/args.json",
   "name": "",
   "type": "object",
   "allOf": [
      {
         "$ref": "#/definitions/arguments"
      }
   ],
   "delimiter": "=",
   "definitions": {
      "arguments": {
         "type": "object",
         "properties": {
            "--extension": {
               "id": "--extension",
               "type": "string",
               "description": "Additional extension to lint [Can be set multiple times]"
            },
            "--no-esnext": {
               "id": "--no-esnext",
               "type": "string",
               "description": "Don't enforce ES2015+ rules"
            },
            "--prettier": {
               "id": "--prettier",
               "type": "string",
               "description": "Conform to Prettier code style"
            },
            "--cwd": {
               "id": "args:--cwd",
               "type": "string",
               "description": "Working directory for files"
            },
            "--ext": {
               "id": "args:--ext",
               "type": "string",
               "description": "Specify JavaScript file extensions - [default: .js]",
               "default": ".js"
            },
            "--stdin": {
               "id": "linterhub:stdin",
               "type": "string",
               "description": "Lint code provided on <STDIN> - (default is false)",
               "default": "false"
            },
            "--SPACE": {
               "id": "args:--SPACE",
               "type": "string",
               "description": "USE SPACE INDENT INSTEAD OF TABS DEFAULTS TO 2",
               "default": "2"
            },
            "--parser": {
               "id": "args:--parser",
               "type": "string",
               "description": "Which parser to use. <flow|babylon|typescript|css|less|scss|json|json5|json-stringify|graphql|markdown|vue|yaml>",
               "enum": [
                  "flow",
                  "babylon",
                  "typescript",
                  "css",
                  "less",
                  "scss",
                  "json",
                  "json5",
                  "json-stringify",
                  "graphql",
                  "markdown",
                  "vue",
                  "yaml"
               ]
            },
            "--arrow-parens": {
               "id": "args:--arrow-parens",
               "type": "string",
               "description": "Include parentheses around a sole arrow function parameter. Defaults to avoid",
               "default": "avoid",
               "enum": [
                  "avoid",
                  "always"
               ]
            },
            "--ignore": {
               "id": "--ignore",
               "type": "string",
               "description": "Additional paths to ignore [Can be set multiple times]"
            },
            "-i": {
               "id": "-i",
               "type": "string",
               "description": "Additional paths to ignore [Can be set multiple times]"
            },
            "": {
               "id": "linterhub:path",
               "type": "string",
               "description": "Path to file or folder to analyze"
            }
         }
      },
      "section": {
         "type": "object",
         "description": "The engine configuration section",
         "properties": {
            "name": {
               "type": "string",
               "description": "The engine name",
               "enum": ""
            },
            "options": {
               "type": "object",
               "description": "The engine configuration",
               "$ref": "#/definitions/arguments"
            }
         }
      }
   }
}
